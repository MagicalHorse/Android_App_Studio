<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <com.shenma.yueba.view.RoundImageView
        android:layout_gravity="left|center_vertical"
        android:id="@+id/gudie_item_layout_roundimageview"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/default_pic"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/gudie_item_layout_customimageview"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/gudie_item_layout_name1_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/gudie_item_layout_roundimageview"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="导购111111111"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/gudie_item_layout_name2_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/gudie_item_layout_roundimageview"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="导购2"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>


