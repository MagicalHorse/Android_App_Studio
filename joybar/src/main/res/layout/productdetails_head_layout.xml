<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/shop_main_width15_dimen"
    android:paddingRight="@dimen/shop_main_width15_dimen"
    android:paddingBottom="@dimen/shop_main_lineheight8_dimen"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/approvebuyerdatails_layout_desc1_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="*商品只支持商城自提"
        android:textColor="@color/red_text_color"
        android:textSize="@dimen/textsize14sp" />

    <RelativeLayout
        android:id="@+id/approvebuyerdatails_content_relativelayout"
        android:layout_below="@+id/approvebuyerdatails_layout_desc1_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/approvebuyerdetails_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""
            android:textColor="@color/red_text_color"
            android:textColorHint="@color/red_text_color"
            android:textSize="@dimen/textsize16sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/textsize13sp"
            android:layout_toRightOf="@+id/approvebuyerdetails_price_textview"
            android:textColor="@color/text_gray_color"
            android:id="@+id/hangtag_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="true"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/textsize13sp"
            android:layout_toRightOf="@+id/hangtag_price_textview"
            android:textColor="@color/white"
            android:id="@+id/hangtag_discount_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@color/red_text_color"
            android:singleLine="true"
            />


    </RelativeLayout>

    <!-- 商品名称 -->

    <TextView
        android:layout_below="@+id/approvebuyerdatails_content_relativelayout"
        android:layout_marginTop="@dimen/shop_main_width5_dimen"
        android:id="@+id/approvebuyerdetails_producename_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dip"
        android:textColor="@color/color_textgray"
        android:text="@null"
        android:textSize="@dimen/textsize16sp" />

</RelativeLayout>
