<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

   <!-- &lt;!&ndash;头文件&ndash;&gt;
    <include
        android:id="@+id/product_head_include"
        layout="@layout/top_layout" />-->

    <ScrollView
        android:id="@+id/approvebuyerdetails_srcollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_footer"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--循环滚动图片-->
            <include
                layout="@layout/productdetails_loop_layout" />

            <!--商品 信息-->
            <include layout="@layout/productdetails_head_layout" />
            <View
                style="@style/style_horizontal_line"
                />

            <!--自提地点-->
            <include
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/take_address_layout" />
            <View
                style="@style/style_horizontal_line"
                />

            <!--商铺信息-->
            <include
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/produtcdetails_shops_layout"/>
            <View
                style="@style/style_horizontal_line"
                />


            <!--导购图-->
            <ImageView
                android:layout_marginTop="10dp"
                style="@style/modulepaddingleftandright_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/productdetails_guide" />

        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/productdetails_footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/back_grey_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/back_grey"
        />

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:id="@+id/share_grey_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/share_grey"
        />

</RelativeLayout>