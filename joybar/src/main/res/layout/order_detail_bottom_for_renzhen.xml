<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/baijia_orderdetails_layout_footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:minHeight="@dimen/shop_main_marginleft30_dimen"
    android:orientation="horizontal"
    android:padding="@dimen/shop_main_lineheight8_dimen" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/baijia_orderdetails_footer_right_linearlayout"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/baijia_orderdetails_lianxibuyer_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableTop="@drawable/circle_default"
            android:gravity="center"
            android:text="联系买手"
            android:drawablePadding="3dip"
            android:textSize="@dimen/textsize11sp" />

        <TextView
            android:drawablePadding="3dp"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:id="@+id/baijia_orderdetails_xjfx_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableTop="@drawable/priceshare"
            android:gravity="center"
            android:text="现金分享"
            android:textSize="@dimen/textsize11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/baijia_orderdetails_footer_right_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" />
</RelativeLayout>
