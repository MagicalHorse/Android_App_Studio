<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:id="@+id/searchbrandlist_head_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_title_height"
        android:background="@color/top_bg"
        >
        <TextView
            android:id="@+id/tv_top_left"
            style="@style/title_text_style"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:layout_marginRight="15dip"
            android:drawableLeft="@drawable/back"
            android:gravity="center_vertical"/>

        <EditText
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:id="@+id/srearchbrandlist_edittext"
            android:layout_toRightOf="@+id/tv_top_left"
            android:layout_toLeftOf="@+id/bt_top_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_background"
            android:hint="搜索品牌"
            />

        <Button
            android:id="@+id/bt_top_right"
            style="@style/title_text_style"
            android:layout_height="25dip"
            android:layout_width="25dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/search"
            android:gravity="center"/>

    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshGridView
        android:padding="2dp"
        android:id="@+id/pull_refresh_gridview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/searchbrandlist_head_relativelayout"
        android:cacheColorHint="#00000000"
        android:verticalSpacing="3dp"
        android:horizontalSpacing="3dp"
        android:numColumns="2"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true" />

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchbrandlist_head_relativelayout"
        layout="@layout/nodata_layout" />

</RelativeLayout>