<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/margin_left_and_right" >

    <!-- 头像 -->

    <ImageView
        android:id="@+id/imagetext_item_imageview"
        android:layout_width="@dimen/user_config_iconwidth50_dimen"
        android:layout_height="@dimen/user_config_iconwidth50_dimen"
        android:scaleType="fitCenter"
        android:src="@drawable/default_pic" />

    <TextView
        android:id="@+id/imagetext_item_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:gravity="center_vertical"
        android:textSize="@dimen/textsize15sp"
        android:hint="姓名" />



</LinearLayout>

    <View
        android:layout_below="@id/ll"
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:background="@color/main_bg"/>
</RelativeLayout>