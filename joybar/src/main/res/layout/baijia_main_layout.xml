<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <FrameLayout
        android:id="@+id/baijia_main_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/baijia_main_foot_style_view"
        android:layout_marginBottom="1dp" />

    <View
        android:id="@+id/baijia_main_foot_style_view"
        style="@style/style_horizontal_line"
        android:layout_above="@+id/baijia_main_foot_linearlayout"/>

    <LinearLayout
        android:id="@+id/baijia_main_foot_linearlayout"
        style="@style/background_gray"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
    </LinearLayout>

</RelativeLayout>