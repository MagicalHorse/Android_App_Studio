<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/main_bg"
    >



    <include
        android:id="@+id/title"
        layout="@layout/title_for_common" />

    <LinearLayout
        android:id="@+id/ll_search_textview"
        android:layout_below="@id/title"
        android:layout_marginTop="10dip"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/style_horizontal_line"/>
        <TextView
            android:id="@+id/tv_search_key"
            android:text="aaaa"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_margin="10dip"
            android:layout_height="wrap_content"
            android:drawablePadding="10dip"
            android:drawableLeft="@drawable/search"/>
        <View style="@style/style_horizontal_line"/>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/ll_sort"
        android:layout_marginTop="10dip"
        android:layout_below="@id/ll_search_textview"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_sales_volume"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:paddingLeft="10dip"
            android:paddingTop="15dip"
            android:paddingBottom="15dip"
            android:gravity="center"
            android:text="销量优先"
            android:layout_height="wrap_content" />
        <View style="@style/style_vertical_line"/>

        <LinearLayout
            android:layout_width="0dip"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_price"
                android:paddingRight="10dip"
                android:paddingTop="15dip"
                android:paddingBottom="15dip"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:drawablePadding="10dip"
                android:drawableRight="@drawable/up"
                android:text="价格"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_below="@id/ll_sort"
        android:id="@+id/plv_products"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/color_lightgrey"/>

    <!-- 无数据视图 -->
    <include layout="@layout/nodata_layout"
        />




</RelativeLayout>
