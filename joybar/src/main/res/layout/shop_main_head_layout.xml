<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_main_head_layout_head_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!-- 头像 -->

    <com.shenma.yueba.view.RoundImageView
        android:id="@+id/shop_main_layout_icon_imageview"
        android:layout_width="@dimen/shop_main_iconwidth80_dimen"
        android:layout_height="@dimen/shop_main_iconwidth80_dimen"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_left_and_right"
        android:src="@drawable/default_pic" />
    <!-- 店名 -->

    <RelativeLayout
        android:layout_marginTop="@dimen/shop_main_lineheight10_dimen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/shop_main_layout_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="买手"
            android:textSize="@dimen/textsize18sp" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/shop_main_attention_imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shop_main_layout_name_textview"
            android:src="@drawable/selectattention_backgournd" />
    </RelativeLayout>

    <!-- 商场 -->

    <TextView
        android:id="@+id/shop_main_layout_market_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_main_width5_dimen"
        android:gravity="center"
        android:text="门店"
        android:textColor="@color/color_textgray"
        android:textSize="@dimen/textsize13sp" />

    <TextView
        android:id="@+id/shap_main_description1_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_main_width15_dimen"
        android:paddingLeft="@dimen/margin_left_and_right"
        android:paddingRight="@dimen/margin_left_and_right"
        android:text=""
        android:textColor="@color/color_textgray"
        android:textSize="@dimen/textsize13sp" />

    <TextView
        android:id="@+id/shap_main_description2_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_main_lineheight10_dimen"
        android:text="@string/shop_description2_str"
        android:paddingLeft="@dimen/margin_left_and_right"
        android:paddingRight="@dimen/margin_left_and_right" />

    <TextView
        android:id="@+id/shap_main_description3_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_main_lineheight10_dimen"
        android:text="@string/shop_description3_str"
        android:paddingLeft="@dimen/margin_left_and_right"
        android:paddingRight="@dimen/margin_left_and_right" />

    <RelativeLayout
        android:paddingLeft="@dimen/margin_left_and_right"
        android:paddingRight="@dimen/margin_left_and_right"
        android:layout_marginTop="@dimen/shop_main_lineheight10_dimen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="2dp"
            android:id="@+id/shop_main_head_layout_address_imageview"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dingwei" />

        <TextView
            android:layout_toRightOf="@id/shop_main_head_layout_address_imageview"
            android:id="@+id/shop_main_head_layout_address_textview"
            android:layout_marginLeft="3dp"
            android:textColor="@color/color_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新中关购物中心"
            />

    </RelativeLayout>

    <View
        style="@style/style_horizontal_line"
        android:layout_marginTop="@dimen/shop_main_width20_dimen" />
        <!-- tab -->

        <LinearLayout
            android:id="@+id/shop_main_head_layout_tab_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/shop_main_width5_dimen"
            android:layout_marginTop="@dimen/shop_main_width5_dimen"
            android:orientation="horizontal" />

        <View style="@style/style_horizontal_line" />

    </LinearLayout>