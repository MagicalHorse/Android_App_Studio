<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--头文件-->
    <include
        android:id="@+id/product_head_include"
        layout="@layout/top_layout" />

    <ScrollView
        android:id="@+id/approvebuyerdetails_srcollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_footer"
        android:layout_below="@id/product_head_include"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--循环滚动图片-->
            <include
                layout="@layout/productdetails_loop_layout" />

            <!--商品 信息-->
            <include layout="@layout/productdetails_head_layout" />

            <!--打样购-->
            <include
                android:visibility="gone"
                layout="@layout/dayang_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shop_main_width15_dimen" />

            <!--规格尺寸-->
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shop_main_width15_dimen"
                layout="@layout/product_spec_layout" />

            <!--商铺信息-->
            <include
                layout="@layout/produtcdetails_shops_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shop_main_width15_dimen" />

            <!--导购图-->


        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/productdetails_footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>