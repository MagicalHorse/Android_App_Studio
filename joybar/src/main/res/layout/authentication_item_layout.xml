<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/contentpadding">

    <!--品牌信息-->
    <RelativeLayout
        android:id="@+id/authentication_item_layout_brand_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/authentication_item_layout_brandname_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/authentication_item_layout_more_textview"
            android:text="ONLY"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/authentication_item_layout_more_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="更多买手"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/authentication_item_layout_line_view"
        style="@style/style_horizontal_line"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />
    <!--导购头像信息-->
    <include layout="@layout/authentication_item_head_layouy" />
    <!--推荐的商品-->
    <LinearLayout
        android:id="@+id/authentication_item_productlist_linearlayout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />
</LinearLayout>
