<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/contentpadding">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dip">

        <com.shenma.yueba.view.RoundImageView
            android:id="@+id/riv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/default_pic" />
        <!--名称-->
        <TextView
            android:id="@+id/tv_name"
            style="@style/text_middle_grey_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/riv_head"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/riv_head"
            android:singleLine="true"
            android:text="BELLE"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/little_text_size"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_name"
            android:background="@drawable/yellow_roundsilod_background"
            android:text="关注"
            android:textColor="@color/white" />


        <!--距离-->
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_store_name"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="北京市海淀区"
            android:textSize="11sp" />

        <!--描述-->
        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/riv_head"
            android:layout_alignLeft="@id/tv_name"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_address"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="专柜名称"
            android:textSize="11sp" />

    </RelativeLayout>

    <View
        android:id="@+id/authentication_item_layout_line_view"
        style="@style/style_horizontal_line"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />
    <!--推荐的商品-->


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/authentication_item_productlist_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/ll_touch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="该买手还没有任何商品，戳他一下！" />

            <TextView
                android:id="@+id/tv_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:background="@drawable/yellow_roundsilod_background"
                android:text="戳一下"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
