<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/contentpadding">




    <!--导购头像信息-->
    <include layout="@layout/authentication_item_head_layouy" />

    <View
        android:id="@+id/authentication_item_layout_line_view"
        style="@style/style_horizontal_line"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />
    <!--推荐的商品-->
    <LinearLayout
        android:id="@+id/authentication_item_productlist_linearlayout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />
</LinearLayout>
